rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // User-specific data - kullanıcılar yalnızca kendi verilerine erişebilir
    match /users/{userId}/{document=**} {
      // Kimlik doğrulaması yapılmış ve kendi verisine erişiyor mu?
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Diğer tüm erişimleri reddet
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
