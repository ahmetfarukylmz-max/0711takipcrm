rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper fonksiyon: Kullanıcı admin mi?
    function isAdmin() {
      return request.auth != null &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper fonksiyon: Kullanıcı giriş yapmış mı?
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper fonksiyon: Kendi verisi mi?
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users koleksiyonu
    match /users/{userId} {
      // Authenticated herkes user bilgilerini okuyabilir (isAdmin() fonksiyonu için gerekli)
      allow read: if isAuthenticated();

      // Yeni kullanıcı kaydı (ilk giriş)
      allow create: if isOwner(userId);

      // Sadece admin kullanıcı rollerini güncelleyebilir veya kullanıcı kendi bilgilerini güncelleyebilir
      allow update: if isOwner(userId) || isAdmin();

      // Sadece admin kullanıcı silebilir
      allow delete: if isAdmin();

      // User-based koleksiyonlar (users/{userId}/customers, products, vb.)
      match /{collection}/{documentId} {
        // Kullanıcı kendi verilerini okuyup yazabilir
        // Admin tüm kullanıcıların verilerini okuyup yazabilir
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // Login Logs koleksiyonu (root seviyede)
    match /loginLogs/{logId} {
      // Sadece admin okuyabilir
      allow read: if isAdmin();
      // Giriş yapan herkes login/logout kaydı yazabilir
      allow create: if isAuthenticated();
      // Update ve delete yasak
      allow update, delete: if false;
    }

    // Diğer tüm koleksiyonlar
    match /{document=**} {
      // Sadece admin erişebilir
      allow read, write: if isAdmin();
    }
  }
}
